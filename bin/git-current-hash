#!/usr/bin/env perl
use strict;
use warnings;

our $VERSION = '1.00';

my $pipe;
if (!open($pipe, "-|")) {
    system("git log -n1 --pretty='format:%h' 2>/dev/null");
    exit;
}
my $hash = <$pipe>;
close($pipe) or die "close: $!";

if (defined $hash) {
    chomp $hash;
    if (length $hash) {
        print "$hash\n" or die "ERROR: print: $!\n";
    }
}
else {
    exit 1;
}
